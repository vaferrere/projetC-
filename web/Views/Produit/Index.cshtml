@using Metier.Entities
@model List<Produit>
@{
    ViewBag.Title = "Index";
}

<h2>Liste des produits</h2>

<table class="table table-striped table-responsive">
    <tr>
        <th>Code</th>
        <th>Libelle</th>
        <th>Description</th>
        <th>Prix</th>
        <th>Stock</th>
        <th>Actif</th>
        <th>Actions</th>
    </tr>
    @foreach (var produit in Model)
    {
    <tr>
        <td>@produit.Code</td>
        <td>@produit.Libelle</td>
        <td>@produit.Description</td>
        <td>@produit.Prix</td>
        <td>@produit.Stock</td>
        @{
            if (produit.Actif)
            {
                <td>Oui</td>
            }
            else
            {
                <td>Non</td>
            }
        }
        <td>
            <div>@Html.ActionLink("Modifier", "Edit", "Produit", new { id = produit.Id }, null)</div>
            <div>@Html.ActionLink("Détails", "Details", "Produit", new { id = produit.Id }, null)</div>
        </td>
    </tr>        
    }
</table>

<div>@Html.ActionLink("Ajouter", "Ajout", "Produit")</div> 